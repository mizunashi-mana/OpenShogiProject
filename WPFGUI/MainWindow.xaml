<Window x:Class="MainGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="517">
            <MenuItem Header="MenuItem" Height="27" Width="95">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="145" RenderTransformOrigin="0.5,0.5">
                    <MenuItem.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.611"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </MenuItem.RenderTransform>
                </MenuItem>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="145"/>
            </MenuItem>
        </Menu>
        <StatusBar HorizontalAlignment="Left" Height="28" Margin="0,291,0,0" VerticalAlignment="Top" Width="517" RenderTransformOrigin="0.473,0.51"/>
        <DataGrid HorizontalAlignment="Left" Height="251" Margin="10,35,0,0" VerticalAlignment="Top" Width="497"
                  ItemsSource="{Binding}" HeadersVisibility="None" />
    </Grid>
</Window>
